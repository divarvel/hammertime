build-type:          Simple
cabal-version:       >=1.8

Library
  Ghc-Options:    -Wall -Werror
  Hs-Source-Dirs: lib
  build-depends:
    base >= 4,
    text >= 1,
    time >= 1.4,
    directory >= 1.2,
    transformers >= 0.3,
    mtl >= 2.1,
    optparse-applicative >= 0.7
  Exposed-Modules:
    Hammertime.Core
    Hammertime.CLI
    Hammertime.Storage
    Hammertime.Storage.File
    Hammertime.Types
    Hammertime.Reports
  Other-Modules:
    Hammertime.Reports.Current
    Hammertime.Reports.Simple
    Hammertime.Reports.TotalTime

Executable hammertime
  Ghc-Options:    -Wall
  main-is:             Hammertime/Main.hs
  hs-source-dirs:      src
  -- other-modules:
  build-depends:
    base >= 4,
    text >= 1,
    time >= 1.4,
    directory >= 1.2,
    transformers >= 0.3,
    mtl >= 2.1,
    optparse-applicative >= 0.7,
    xdg-basedir >= 0.2,
    hammertime

test-suite hunit
  type: exitcode-stdio-1.0
  main-is: TestSuite.hs
  hs-source-dirs: tests
  build-depends:
    base,
    optparse-applicative,
    hammertime,
    HUnit >= 1.2,
    test-framework       >= 0.6,
    test-framework-hunit >= 0.2
  Other-modules:
    Hammertime.CLI.Tests
    Hammertime.Core.Tests
